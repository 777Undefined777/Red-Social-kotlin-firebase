<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/anarchys"
        android:label="@string/app_name"
        android:roundIcon="@drawable/anarchys"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlinaprendiz"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- La actividad MainActivity puede ser definida aquí si es parte de la aplicación -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity android:name=".PrincipalActivity"></activity>
        <activity android:name=".CreatePostActivity"></activity>
        <activity android:name=".PostsAdapter"></activity>
        <activity android:name=".RegistroActivity"></activity>
        <activity android:name=".CommentsActivity"></activity>
        <activity android:name=".UserEditActivity"></activity>


    </application>
</manifest>
