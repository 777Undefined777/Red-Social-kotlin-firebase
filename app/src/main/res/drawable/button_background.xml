<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#1C1C1C"/> <!-- Fondo negro al presionar -->
            <stroke android:width="2dp" android:color="#7FFF00"/> <!-- Bordes verdes -->
            <corners android:radius="8dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#000000"/> <!-- Fondo negro -->
            <stroke android:width="2dp" android:color="#7FFF00"/> <!-- Bordes verdes -->
            <corners android:radius="8dp"/> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
